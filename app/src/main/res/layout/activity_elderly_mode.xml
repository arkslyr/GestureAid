<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gesture drawing area -->
    <android.gesture.GestureOverlayView
        android:id="@+id/gestureOverlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gestureStrokeType="single"
        android:eventsInterceptionEnabled="true"
        android:fadeOffset="0"
        android:fadeEnabled="false"
        android:gestureColor="@android:color/holo_blue_dark"
        android:uncertainGestureColor="@android:color/holo_red_dark"
        android:gestureStrokeWidth="8" />

    <!-- Exit button in top-right corner -->
    <ImageButton
        android:id="@+id/exitLockBtn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_lock"
        android:contentDescription="Exit Elderly Mode" />

</FrameLayout>
