<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customize Physical Button Actions"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"/>

        <!-- Example for Volume Up -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume Up Long Press"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinnerVolumeUpLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/button_actions"/>

        <!-- Example for Volume Down -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume Down Long Press"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinnerVolumeDownLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/button_actions"/>

        <!-- Add more combinations as needed -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButtonConfigBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Save Button Configuration"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"/>
    </LinearLayout>
</ScrollView>
